<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <artifactId>bb-kit</artifactId>
    <version>0.1.2-SNAPSHOT</version>
    <name>Common Kit</name>
    <description>Common Development Kit</description>
    <url>http://confluence.infra.bolbat.net/display/BBKIT</url>

    <parent>
        <groupId>net.bolbat</groupId>
        <artifactId>bb-parent</artifactId>
        <version>8</version>
    </parent>

    <properties>
        <!-- bb dependencies versions -->
        <bb-utils.version>0.2.4</bb-utils.version>

        <!-- external dependencies -->
        <configureme.version>2.3.0</configureme.version>
        <reflections.version>0.9.9-RC1</reflections.version>
        <quartz-scheduler.version>2.2.1</quartz-scheduler.version>
        <jackson.core.version>2.3.2</jackson.core.version>

        <!-- general configuration properties -->
        <maven.compiler.source>1.6</maven.compiler.source>
        <maven.compiler.target>1.6</maven.compiler.target>
    </properties>

    <dependencies>
        <!-- BB.Dependencies -->
        <dependency>
            <groupId>net.bolbat</groupId>
            <artifactId>bb-utils</artifactId>
            <version>${bb-utils.version}</version>
        </dependency>

        <!-- External dependencies -->
        <dependency>
            <groupId>net.anotheria</groupId>
            <artifactId>configureme</artifactId>
            <version>${configureme.version}</version>
        </dependency>
        <dependency>
            <groupId>org.reflections</groupId>
            <artifactId>reflections</artifactId>
            <version>${reflections.version}</version>
        </dependency>
        <dependency>
            <groupId>org.quartz-scheduler</groupId>
            <artifactId>quartz</artifactId>
            <version>${quartz-scheduler.version}</version>
        </dependency>
        <!--Jackson -->
        <dependency>
            <groupId>com.fasterxml.jackson.core</groupId>
            <artifactId>jackson-annotations</artifactId>
            <version>${jackson.core.version}</version>
        </dependency>

        <!-- Testing dependencies -->
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>ch.qos.logback</groupId>
            <artifactId>logback-classic</artifactId>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <scm>
        <connection>scm:git:ssh://git@stash.infra.bolbat.net:9074/BBKIT/main.git</connection>
        <developerConnection>scm:git:ssh://git@stash.infra.bolbat.net:9074/BBKIT/main.git</developerConnection>
        <url>http://stash.infra.bolbat.net/scm/BBKIT/main.git</url>
        <tag>HEAD</tag>
    </scm>

</project>
